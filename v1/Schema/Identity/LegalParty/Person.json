{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "@context": {
            "type": "string",
            "minLength": 1
        },
        "@type": {
            "type": "string",
            "minLength": 1,
            "enum": [
                "Person"
            ]
        },
        "id": {
            "title": "",
            "description": "",
            "type": "string"
        },
        "metadata": {
            "title": "Metadata",
            "description": "Metadata container",
            "type": "object",
            "properties": {
                "createdAt": {
                    "title": "Creation time",
                    "description": "Time when the data is created",
                    "type": "string"
                },
                "updatedAt": {
                    "title": "Update time",
                    "description": "Time when the data is updated",
                    "type": "string"
                },
                "updatedBy": {
                    "title": "Updater",
                    "description": "Updater of an identity",
                    "type": "string"
                },
                "createdBy": {
                    "title": "Creator",
                    "description": "Creator of and identity",
                    "type": "string"
                }
            }
        },
        "data": {
            "title": "",
            "description": "",
            "type": "object",
            "properties": {
                "idOfficial": {
                    "title": "Identity number",
                    "description": "Official identifier of the person in Finland",
                    "type": "string"
                },
                "firstName": {
                    "title": "First Name",
                    "description": "First name of the person",
                    "type": "string"
                },
                "middleName": {
                    "title": "Middle names",
                    "description": "Middle names of the person",
                    "type": "string"
                },
                "lastName": {
                    "title": "Last name",
                    "description": "Last name of the person",
                    "type": "string"
                },
                "birthdate": {
                    "title": "Date of birth",
                    "description": "Birthdate of the person",
                    "type": "string"
                },
                "additionalInformation": {
                    "title": "Additional information",
                    "description": "Additional information",
                    "type": "string"
                },
                "status": {
                    "title": "Life cycle status",
                    "description": "Life cycle status",
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "id",
        "data",
        "@context",
        "@type"
    ]
