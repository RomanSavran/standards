{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "@context": {
            "type": "string",
            "minLength": 1
        },
        "@type": {
            "type": "string",
            "minLength": 1,
            "enum": [
                "PricePlan"
            ]
        },
        "id": {
            "title": "",
            "description": "",
            "type": "string"
        },
        "metadata": {
            "title": "Metadata",
            "description": "Metadata container",
            "type": "object",
            "properties": {
                "createdAt": {
                    "title": "Creation time",
                    "description": "Time when the data is created",
                    "type": "string"
                },
                "createdBy": {
                    "title": "Creator",
                    "description": "Creator of and identity",
                    "type": "string"
                },
                "updatedAt": {
                    "title": "Update time",
                    "description": "Time when the data is updated",
                    "type": "string"
                },
                "updatedBy": {
                    "title": "Updater",
                    "description": "Updater of an identity",
                    "type": "string"
                }
            }
        },
        "data": {
            "title": "",
            "description": "",
            "type": "object",
            "properties": {
                "unitGroup": {
                    "title": "Unit group",
                    "description": "Group name of the unit used for rate (price) value",
                    "type": "string"
                },
                "vatIncluded": {
                    "title": "VAT included in rate",
                    "description": "Information if VAT is included in the rate (price)",
