                },
                "vatPercentage": {
                    "title": "VAT percentage",
                    "description": "Percentage value used for VAT taxation",
                    "type": "string"
                },
                "name": {
                    "title": "Building name",
                    "description": "Name of the price plan",
                    "type": "string"
                },
                "unit": {
                    "title": "Unit",
                    "description": "Exact name of the unit used for rate (price) value",
                    "type": "string"
                },
                "rate": {
                    "title": "Rate",
                    "description": "Rate value for the unit",
                    "type": "string"
                },
                "currency": {
                    "title": "Currency",
                    "description": "Currency used for rate",
                    "type": "string"
                }
            }
